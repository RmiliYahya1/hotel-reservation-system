<Window x:Class="hotel_reservation_desktop_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Users}" AutoGenerateColumns="True" Margin="10" />

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <TextBox x:Name="UsernameBox" Width="100" Margin="5"/>
            <TextBox x:Name="EmailBox" Width="150" Margin="5"/>
            <TextBox x:Name="PasswordBox" Width="100" Margin="5"/>
            <TextBox x:Name="RoleBox" Width="100" Margin="5"/>
            <Button Content="Add User" Width="100" Click="AddUser_Click" />
        </StackPanel>
    </Grid>
</Window>

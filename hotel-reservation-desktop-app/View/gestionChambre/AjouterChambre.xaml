<Window x:Class="hotel_reservation_desktop_app.View.gestionChambre.AjouterChambre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.View.gestionChambre"
        mc:Ignorable="d"
        Title="AjouterChambre" Height="600" Width="500"   WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">
    <Grid VerticalAlignment="Center">
        <Border CornerRadius="7" Background="#ffffff" BorderThickness="1" BorderBrush="#374655">
            <Border.Effect>
                <DropShadowEffect  ShadowDepth="5" Direction="-130" Opacity="0.1"/>
            </Border.Effect>
            <Border CornerRadius="7" Background="#ffffff">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                </Border.Effect>
                <Grid Margin="20 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                        Orientation="Horizontal"
                        Margin="20 20 0 0"
                    >
                        <TextBlock 
                            Text="Ajouter une chambre" 
                            Foreground="#374655"
                            FontSize="18"
                            VerticalAlignment="Center"
                        />
                    </StackPanel>
                    
                    <Separator
                        Grid.Row="1" 
                        Grid.ColumnSpan="2" 
                        Height="0.7"
                        Margin="-20 20"
                        Background="#e1e6eb"
                    />
                    
                    <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="20 10">
                        <TextBlock
                            Text="Ajouter un nombre" 
                            Foreground="#97a5b4"
                            FontSize="13"
                            Margin="0 0 0 8"
                        />
                        <Grid>
                            <TextBlock
                                Text="Nombre "
                                Margin="13 0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                IsHitTestVisible="False"
                                Panel.ZIndex="1"
                                FontSize="14"
                               Name="TextBlock"
                
                            />
                            <TextBox 
                                Name="NumberTextBox"
                                Style="{StaticResource FormTextBox}"
                                TextChanged="TextBox_OnTextChanged"
                            />
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="20 10">
                        <TextBlock
                            Text="Ajouter la disponibilité" 
                            Foreground="#97a5b4"
                            FontSize="13"
                            Margin="0 0 0 8"
                        />
                        <Grid>
                            <TextBlock
                                Margin="13 0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                IsHitTestVisible="False"
                                Panel.ZIndex="1"
                                FontSize="14"
                            />
                            <ComboBox x:Name="DisponibiliteComboBox" Height="20" Width="360">
                                <ComboBoxItem Content="Disponible" />
                                <ComboBoxItem Content="Indisponible" />
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="20 10">
                        <TextBlock
                            Text="Ajouter la catégorie" 
                            Foreground="#97a5b4"
                            FontSize="13"
                            Margin="0 0 0 8"
                        />
                        <Grid>
                            <TextBlock
                                Margin="13 0"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                IsHitTestVisible="False"
                                Panel.ZIndex="1"
                                FontSize="14"
                            />
                            <ComboBox x:Name="CategorieComboBox" Height="20" Width="360">
                               
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                    
                    <Border 
                        Grid.Row="6" 
                        Grid.ColumnSpan="2"
                        Height="80"
                        Background="#f6f6f6"
                        CornerRadius="0 0 10 10"
                        Margin="-20 40 -20 0"
                    />
                    
                    <Button
                        Style="{StaticResource BoutonAjout}"
                        Grid.Column="1"
                        Grid.Row="6"
                        Content="Ajouter"
                        Margin="0 40 20 0"
                        HorizontalAlignment="Right"
                        Name="Button"
                        Click="AjouterButton_Click"
                    >
                        <Button.Effect>
                            <DropShadowEffect 
                                BlurRadius="10"
                                ShadowDepth="5"
                                Color="#4880ff"
                                Opacity="0.3"
                                Direction="-120"
                            />
                        </Button.Effect>
                    </Button>
                    <Button
                        Style="{StaticResource BoutonAnnuler}"
                        Grid.Row="6" 
                        HorizontalAlignment="Left"
                        Margin="20 40 0 0"
                        Width="150"
                        Content="Annuler"
                        Click="ButtonBase_OnClick"
                    >
                        
                    </Button>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>

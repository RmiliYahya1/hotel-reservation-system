<Window x:Class="hotel_reservation_desktop_app.View.GestionReservation.FormulairePaiement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.View.GestionReservation"
        mc:Ignorable="d"
        Title="FormulairePaiement" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Montant :" />
            <TextBlock x:Name="AmountTextBlock" Width="200" Margin="0,5,0,15" 
                       Text="{Binding}" HorizontalAlignment="Left" FontWeight="Bold"/>

            <Label Content="Méthode de Paiement :" />
            <ComboBox x:Name="PaymentMethodComboBox" Width="200" Margin="0,5,0,15">
                <ComboBoxItem Content="Carte de Crédit" />
                <ComboBoxItem Content="Espèces" />
                <ComboBoxItem Content="Virement Bancaire" />
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ajouter" Width="100" Margin="10" Click="AddPaymentButton_Click" />
                <Button Content="Annuler" Width="100" Margin="10" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

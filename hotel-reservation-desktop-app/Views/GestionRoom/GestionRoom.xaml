<Window x:Class="hotel_reservation_desktop_app.Views.GestionRoom.GestionRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.Views.GestionRoom"
        mc:Ignorable="d"
        Title="GestionRoom" Height="450" Width="800">
    <Grid Margin="10,10,10,11">
        <TextBlock
        Text="Gestion des Chambres"
        FontSize="18"
        FontWeight="SemiBold"
        Margin="30,3,0,350"
        HorizontalAlignment="Left"
        Foreground="#121518" Width="234"
        />
        <!-- DataGrid pour afficher la liste des roomtypes -->
        <DataGrid Name="RoomDataGrid" AutoGenerateColumns="False" Margin="10,0,10,0" 
           ScrollViewer.HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Rooms}" RenderTransformOrigin="0.5,0.5" Height="314" VerticalAlignment="Center">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.301"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.795"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Number}" Width="*" />
                <DataGridTextColumn Header="Disponibilité" Binding="{Binding IsAvailable}" Width="*" />
                <DataGridTextColumn Header="Catégorie" Binding="{Binding RoomType.Name}" Width="*" />
                <DataGridTemplateColumn Header="Opérations" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Modifier" Width="74" Click="ModifierButton_Click" Height="24" Margin="5,5,5,5" 
                          CommandParameter="{Binding}"/>
                                <Button Content="Supprimer" Width="74" Click="SupprimerButton_Click" Height="24" Margin="5,5,5,5" 
                          CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Boutons pour les actions -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,44,0" Height="38" Width="307">
            <TextBox Width="200" Height="24"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" />
            <Button Content="Ajouter" Width="74" Click="AjouterButton_Click" Height="24" Margin="5,5,5,0"  />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="577,0,0,10">
            <Button Content="Précédent" Click="PreviousButton_Click" Margin="5"/>
            <TextBlock Text="{Binding CurrentPage}" Margin="5"/>
            <TextBlock Text="sur" Margin="5"/>
            <TextBlock Text="{Binding TotalPages}" Margin="5"/>
            <Button Content="Suivant" Click="NextButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

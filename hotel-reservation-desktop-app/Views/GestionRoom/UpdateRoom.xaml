<Window x:Class="hotel_reservation_desktop_app.Views.GestionRoom.UpdateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.Views.GestionRoom"
        mc:Ignorable="d"
        Title="UpdateRoom" Height="257" Width="486">
    <Grid Margin="10,10,10,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="84*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.RowSpan="2">
            <TextBlock Text="Nombre :" />
            <TextBox Name="NumberTextBox" Height="20" Width="360" />

            <!-- Disponibilité -->
            <TextBlock Text="Disponibilité :" Margin="0,10,0,0" />
            <ComboBox x:Name="DisponibiliteComboBox" Height="20" Width="360">
                <ComboBoxItem Content="Disponible" />
                <ComboBoxItem Content="Indisponible" />
            </ComboBox>

            <!-- Catégorie -->
            <TextBlock Text="Catégorie :" Margin="0,10,0,0" VerticalAlignment="Top" />
            <ComboBox x:Name="CategorieComboBox" Height="20" Width="360">
                <!-- Items seront bindés dynamiquement dans le code-behind -->

            </ComboBox>

            <Button Content="Modifier" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0"
             Click="ModifierButton_Click" FontSize="14" />
        </StackPanel>
    </Grid>
</Window>

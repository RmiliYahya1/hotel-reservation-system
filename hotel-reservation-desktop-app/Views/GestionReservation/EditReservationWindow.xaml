<Window x:Class="hotel_reservation_desktop_app.Views.GestionReservation.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.Views.GestionReservation"
        mc:Ignorable="d"
        Title="EditReservationWindow" Height="600" Width="500"   WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent"  >
    <Grid VerticalAlignment="Center">
        <Border CornerRadius="7" Background="#ffffff" BorderThickness="1" BorderBrush="#374655">
            <Border.Effect>
                <DropShadowEffect  ShadowDepth="5" Direction="-130" Opacity="0.1"/>
            </Border.Effect>
            <Border CornerRadius="7" Background="#ffffff">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                </Border.Effect>
    <Grid Margin="20 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel 
            Orientation="Horizontal"
            Margin="20 20 0 0"
        >
            <TextBlock 
                Text="Modifier la réservation" 
                Foreground="#374655"
                FontSize="18"
                VerticalAlignment="Center"
            />
        </StackPanel>
        
        <Separator
            Grid.Row="1" 
            Grid.ColumnSpan="2" 
            Height="0.7"
            Margin="-20 20"
            Background="#e1e6eb"
        />
        
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="20 10">
            <TextBlock
                Text="Client" 
                Foreground="#97a5b4"
                FontSize="13"
                Margin="0 0 0 8"
            />
            <Grid>
                <TextBlock
                    Margin="13 0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    IsHitTestVisible="False"
                    Panel.ZIndex="1"
                    FontSize="14"
                />
                <ComboBox x:Name="ClientComboBox" Height="20" Width="Auto" DisplayMemberPath="FullName" SelectedValuePath="ID">
                    <ComboBoxItem Content="Disponible" />
                    <ComboBoxItem Content="Indisponible" />
                </ComboBox>
            </Grid>
        </StackPanel>
        
        <StackPanel  Grid.Column="0" Grid.Row="2" Margin="20 10">
            <TextBlock
                Text="Type de chambre" 
                Foreground="#97a5b4"
                FontSize="13"
                Margin="0 0 0 8"
            />
            <Grid>
                <TextBlock
                    Margin="13 0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    IsHitTestVisible="False"
                    Panel.ZIndex="1"
                    FontSize="14"
                />
                <ComboBox x:Name="RoomTypeComboBox" Height="20" Width="Auto" DisplayMemberPath="Name" SelectedValuePath="ID" DataContextChanged="RoomTypeComboBox_DataContextChanged" >
                               
                </ComboBox>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="3" Margin="20 10">
            <TextBlock
                Text="Date de Check-In" 
                Foreground="#97a5b4"
                FontSize="13"
                Margin="0 0 0 8"
            />
            <DatePicker x:Name="CheckInDatePicker" Width="200" Margin="290,-16,290,36" SelectedDateChanged="DatePicker_SelectedDateChanged" />
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="3" Margin="20 10">
            <TextBlock
                Text="Date de Check-Out" 
                Foreground="#97a5b4"
                FontSize="13"
                Margin="0 0 0 8"
            />
            <DatePicker x:Name="CheckOutDatePicker" Width="200" Margin="290,-22,290,42" SelectedDateChanged="DatePicker_SelectedDateChanged" />
        </StackPanel>
        
        <StackPanel  Grid.Column="0" Grid.Row="4" Margin="20 10">
            <TextBlock
                Text="Chambre" 
                Foreground="#97a5b4"
                FontSize="13"
                Margin="0 0 0 8"
            />
            <Grid>
                <TextBlock
                    Margin="13 0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    IsHitTestVisible="False"
                    Panel.ZIndex="1"
                    FontSize="14"
                />
                <ComboBox  x:Name="RoomComboBox" Height="20" Width="Auto"  DisplayMemberPath="Number" SelectedValuePath="ID" >
                               
                </ComboBox>
            </Grid>
        </StackPanel>
        
        <Border 
            Grid.Row="6" 
            Grid.ColumnSpan="2"
            Height="80"
            Background="#f6f6f6"
            CornerRadius="0 0 10 10"
            Margin="-20 40 -20 0"
        />
   
        <Button
            Style="{StaticResource BoutonAjout}"
            Grid.Column="1"
            Grid.Row="6"
            Content="Modifier"
            Margin="0 40 20 0"
            HorizontalAlignment="Right"
            Name="Button"
            Click="SaveButton_Click"
        >
            <Button.Effect>
                <DropShadowEffect 
                    BlurRadius="10"
                    ShadowDepth="5"
                    Color="#4880ff"
                    Opacity="0.3"
                    Direction="-120"
                />
            </Button.Effect>
        </Button>
        
        <Button
            Style="{StaticResource BoutonAnnuler}"
            Grid.Row="6" 
            HorizontalAlignment="Left"
            Margin="20 40 0 0"
            Width="150"
            Content="Annuler"
            Click="CancelButton_Click"
        >
        </Button>
    </Grid>
            </Border>
        </Border>
    </Grid>
</Window>

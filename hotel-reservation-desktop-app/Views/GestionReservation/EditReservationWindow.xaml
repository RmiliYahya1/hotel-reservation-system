<Window x:Class="hotel_reservation_desktop_app.Views.GestionReservation.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.Views.GestionReservation"
        mc:Ignorable="d"
        Title="EditReservationWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Grid>
                <Label Content="Client :" Width="320" Margin="10,8,450,-8" />
            </Grid>
            <Grid>
                <ComboBox x:Name="ClientComboBox" Width="200" Margin="289,-16,291,36" 
                      DisplayMemberPath="FullName" SelectedValuePath="ID" />
            </Grid>
            <Grid>
                <Label Content="RoomType :" Width="344" Margin="10,-9,426,10" />
            </Grid>
            <Grid>
            <ComboBox x:Name="RoomTypeComboBox" Width="200" 
DisplayMemberPath="Name" SelectedValuePath="ID" DataContextChanged="RoomTypeComboBox_DataContextChanged" Margin="291,-31,289,31" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="405*"/>
                    <ColumnDefinition Width="31*"/>
                    <ColumnDefinition Width="344*"/>
                </Grid.ColumnDefinitions>
               
            </Grid>
            <Grid>
            <Label Content="Date de Check-In :" Margin="0,8,0,-8" />
            </Grid>
            <Grid>
            <DatePicker x:Name="CheckInDatePicker" Width="200" Margin="290,-16,290,36" SelectedDateChanged="DatePicker_SelectedDateChanged" />
            </Grid>
            <Label Content="Date de Check-Out :" />
            <Grid>
            <DatePicker x:Name="CheckOutDatePicker" Width="200" Margin="290,-22,290,42" SelectedDateChanged="DatePicker_SelectedDateChanged" />
            </Grid>
            <Grid>
                <Label Content="Chambre :" Width="216" Margin="10,8,554,-8" />
            </Grid>
            <Grid>
            <ComboBox x:Name="RoomComboBox" Width="200" Margin="290,-16,290,36" 
          DisplayMemberPath="Number" SelectedValuePath="ID" />
            </Grid>
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,35,0,-15">
                    <Button Content="Enregistrer" Width="100" Margin="10" Click="SaveButton_Click" />
                    <Button Content="Annuler" Width="100" Margin="10" Click="CancelButton_Click" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="hotel_reservation_desktop_app.ViewModels.GesionRoomType.UpdateRoomType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_reservation_desktop_app.ViewModels.GesionRoomType"
        mc:Ignorable="d"
        Title="UpdateRoomType" Height="450" Width="800">
    <Grid Margin="32,10,10,6">
        <StackPanel Margin="10,10,10,0">
            <TextBlock Text="Nom :" />
            <TextBox Name="NomTxt" Height="20" Width="360" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Description :" Margin="0,10,0,0" />
            <TextBox Name="DescriptionTxt" Height="20" Width="360" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Prix :" Margin="0,10,0,0" />
            <TextBox Name="PrixTxt" Width="360" Height="20" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Capacité :" Margin="0,10,0,0" />
            <TextBox Name="CapaciteTxt" Width="360" Height="20" Text="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Modifier" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0"
                Click="ModifierButton_Click" FontSize="14" />
        </StackPanel>
    </Grid>
</Window>
